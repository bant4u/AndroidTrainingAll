<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.at.androidtraining"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.at.androidtraining.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.at.androidtraining.styling.StylingActivity"
            android:label="@string/title_activity_styling" >
        </activity>
        <activity
            android:name="com.at.androidtraining.database.DatabaseActivity"
            android:label="@string/title_activity_database" >
        </activity>
        <activity
            android:name="com.at.androidtraining.sharedpreferences.SharedPrefsActivity"
            android:label="@string/title_activity_shared_prefs" >
        </activity>
        <activity
            android:name="com.at.androidtraining.webview.WebviewActivity"
            android:label="@string/title_activity_webview"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.at.androidtraining.webservices.JsonParserActivity"
            android:label="@string/title_activity_json_parser" >
        </activity>
        <activity
            android:name="com.at.androidtraining.listview.ListviewActivity"
            android:label="@string/title_activity_listview" >
        </activity>
        <activity
            android:name="com.at.androidtraining.phonecall.CallActivity"
            android:label="@string/title_activity_call" >
        </activity>
    </application>

</manifest>